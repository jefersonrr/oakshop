<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
     <filter>
        <filter-name>validarSesion.do</filter-name>
        <filter-class>ControladorVistas.validarSesion</filter-class>
    </filter>
    <filter-mapping>
         <filter-name>validarSesion.do</filter-name>
         <url-pattern>/jsp/index.jsp</url-pattern>

    </filter-mapping>
        <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>ControladorVistas.IniciarSesion</servlet-class>
    </servlet>
      <servlet>
        <servlet-name>cerrarSesion</servlet-name>
        <servlet-class>ControladorVistas.cerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>ControladorVistas.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>ControladorVistas.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarRopaIndex</servlet-name>
        <servlet-class>ControladorVistas.MostrarRopaIndex</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion.do</url-pattern>
    </servlet-mapping>
       <servlet-mapping>
        <servlet-name>cerrarSesion</servlet-name>
        <url-pattern>/cerrarSesion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarRopaIndex</servlet-name>
        <url-pattern>/MostrarRopaIndex.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
</web-app>
